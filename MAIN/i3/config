bindsym $mod+Shift+d                            exec code
bindsym $mod+e                                  layout toggle split
#bindsym $mod+Shift+e                            
bindsym $mod+f                                  fullscreen toggle
bindsym $mod+Shift+f                            exec firefox                                  
#bindsym $mod+g
#bindsym $mod+Shift+g
bindsym $mod+h                                  split h
#bindsym $mod+Shift+h                                  
bindsym $mod+i                                  resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+i                            resize shrink height 20 px or 20 ppt
#bindsym $mod+m                                  
#bindsym $mod+Shift+m
#bindsym $mod+n
#bindsym $mod+Shift+n
bindsym $mod+o                                  resize grow height 10 px or 10 ppt
bindsym $mod+Shift+o                            resize grow height 20 px or 20 ppt
bindsym $mod+p                                  resize grow width 10 px or 10 ppt
bindsym $mod+Shift+p                            resize grow width 20 px or 20 ppt
bindsym $mod+q                                  kill
#bindsym $mod+Shift+q
#bindsym $mod+r
bindsym $mod+Shift+r                            restart
bindsym $mod+s                                  layout stacking
bindsym $mod+Shift+s                            exec gnome-screenshot
#bindsym $mod+t
