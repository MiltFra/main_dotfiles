	#bindsym $mod+1 workspace 2:web; layout tabbed; exec [ $(ps h -C vimb | wc -l) = 0 ] && /usr/bin/vimb -s
	#mode "default"
#}

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

### ASSIGNS

workspace $workspace1 output $lmonitor
workspace $workspace2 output $lmonitor
workspace $workspace3 output $lmonitor
workspace $workspace4 output $rmonitor
workspace $workspace5 output $rmonitor
workspace $workspace6 output $rmonitor
workspace $workspace7 output $rmonitor
workspace $workspace8 output $rmonitor
workspace $workspace9 output $rmonitor
workspace $workspace10 output $rmonitor

default_border                                  none

for_window [class="^.*"]                        move to workspace $workspace5
for_window [class="Firefox"]                    move to workspace $workspace1
for_window [class="Termite"]                    move to workspace $workspace2
for_window [class="Code"]                       move to workspace $workspace4
for_window [class="Texmaker"]                   move to workspace $workspace4
for_window [class="Thunderbird"]                move to workspace $workspace3
for_window [class="Spotify"]                    move to workspace $workspace3    
for_window [class="^.*"]                        border pixel 0
focus_follows_mouse no

### COLOR ASSIGNMENT

client.focused          $bg-color          $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color   $urgent-bg-color  $urgent-text-color   #00ff00

### GAPS

gaps inner 15
gaps outer 0
floating_modifier $mod
### STARTUP
exec_always "setxkbmap -layout us,de"
exec_always "setxkbmap -option 'grp:win_space_toggle'"
exec_always ~/.config/screenlayout.sh

#exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always feh --bg-fill ~/.config/wallpapers/$wallpaper
exec_always compton 
exec $terminal
exec $terminal
exec code
exec firefox 
exec thunderbird
exec spotify

exec polybar -r default
exec_always xmodmap -e "clear lock" #disable caps lock switch
exec_always xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape
