# Other
bindsym $mod+Return                             exec $terminal
bindsym $mod+Shift+Return                       exec $terminal -e ranger
bindsym $mod+$left                              focus left
bindsym $mod+Shift+$left                        move left
bindsym $mod+$down                              focus down
bindsym $mod+Shift+$down                        move down
bindsym $mod+$up                                focus up
bindsym $mod+Shift+$up                          move up
bindsym $mod+$right                             focus right
bindsym $mod+Shift+$right                       move right

bindsym $mod+space                              focus mode_toggle
bindsym $mod+Shift+space                        floating toggle
bindsym $mod+minus                              scratchpad show
bindsym $mod+Shift+minus                        move scratchpad

bindsym $mod+Escape                             mode $modepower

bindsym XF86AudioRaiseVolume                    exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume                    exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute                           exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym XF86MonBrightnessUp                     exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown                   exec xbacklight -dec 20 # decrease screen brightness
bindsym XF86TouchpadToggle                      exec ~/.i3/toggletouchpad.sh # toggle touchpad
bindsym XF86AudioPlay                           exec playerctl play
bindsym XF86AudioPause                          exec playerctl pause
bindsym XF86AudioNext                           exec playerctl next
bindsym XF86AudioPrev                           exec playerctl previous

mode $modepower {
        bindsym j mode "default",               exec --no-startup-id lock
        bindsym k mode "default",               exit
        bindsym l mode "default",               exec --no-startup-id shutdown now
        bindsym semicolon mode "default",       exec --no-startup-id reboot

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

### ASSIGNS

default_border                                  none

for_window [class="^.*"]                        move to workspace $workspace4
for_window [class="Firefox"]                    move to workspace $workspace1
for_window [class="Termite"]                    move to workspace $workspace2
for_window [class="Code"]                       move to workspace $workspace3
for_window [class="Texmaker"]                   move to workspace $workspace3
for_window [class="Thunderbird"]                move to workspace $workspace9
for_window [class="Spotify"]                    move to workspace $workspace10    
